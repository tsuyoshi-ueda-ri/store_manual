<p id="notice"><%= notice %></p>
<div id="page" class="site"> 
<h1 class="heading">マニュアル一覧</h1>
<%= form_with(url: search_movies_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
<table class="index-cell">
  <thead>
    <tr>
      <th class="title">[Title]</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr class="index-data">
        <td class="index-data-name"><%= movie.title %></td>
        <td class="index-data-content"><%= movie.content %></td>
        <td class="index-data-viewing"><%= link_to '視聴', movie %></td>
        <td class="index-data-updata"><%= link_to '編集', edit_movie_path(movie) %></td>
        <td class="index-data-delete"><%= link_to '削除', movie, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '投稿する', new_movie_path %>
