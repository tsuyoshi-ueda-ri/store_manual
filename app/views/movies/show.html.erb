<p id="notice"><%= notice %></p>

<p class="show-title">
  <strong>タイトル:</strong>
  <%= @movie.title %>
</p>

<p class="show-content">
  <strong>説明:</strong>
  <div class="content-main">
    <%= sanitize @movie.content, tags: %w(h1 h2 h3 h4 h5 h6 ul ol li p a img table tr td em br strong div), attributes: %w(id class href) %>
  </div>
</p>

<p class="show-movie">
  <strong>動画:</strong>
  <%# <div class="movie-main"> %>
    <% if @movie.movie.attached? %>
      <%= video_tag rails_blob_path(@movie.movie, disposition: "attachment"), :controls => true, class: "movie-main" %>
    <% end %>
  </div>
</p>

<h2>コメント</h2>
  <div id="comments">
    <%= render @movie.comments %>
  </div>

<%= render 'comments/new', movie: @movie %>

<%= link_to '編集', edit_movie_path(@movie) %> |
<%= link_to '戻る', movies_path %>
